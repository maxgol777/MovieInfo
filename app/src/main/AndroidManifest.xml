<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="work.maxgol.movieviewer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".jv.common.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".jv.ui.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".jv.ui.ui.activities.MovieDetailActivity" />
        <activity
            android:name=".jv.ui.ui.activities.SettingsActivity"
            android:theme="@style/AppThemeWithActBar" />
    </application>

</manifest>